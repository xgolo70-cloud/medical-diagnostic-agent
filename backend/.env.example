# Medical Diagnostic Agent - Environment Variables
# Copy this file to .env and fill in the values

# ==================== REQUIRED ====================

# Hugging Face Token for MedGemma model access
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Google Gemini API Key (for fallback)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret Key for authentication (use a strong random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_super_secret_key_here

# Password Salt for hashing
PASSWORD_SALT=your_password_salt_here

# ==================== OPTIONAL ====================

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Audit Log Directory
# AUDIT_LOG_DIR=/var/log/medical_app

# Enable/Disable API Documentation
ENABLE_DOCS=true

# ==================== EMAIL (SMTP) ====================

# Set to false to send real emails via SMTP
EMAIL_DEV_MODE=true

# SMTP Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Sender Information
SENDER_EMAIL=noreply@medai.app
SENDER_NAME=MedAI

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173
